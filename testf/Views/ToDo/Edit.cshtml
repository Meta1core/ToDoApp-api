@model ToDoApp.Models.ToDoTask
@{
    ViewBag.Title = "Edit";
}
<h2>Details Page</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Id)
    <div class="form-group">
        <label for="textOfTask">Body of your task</label>
        <input type="text" class="form-control" name="textOfTask" value="@Model.Description " required>
    </div>
    <div class="form-group">
        <input type="datetime-local" name="dateOfTask" value="@Model.DateOfTask.ToString("yyyy-MM-dd HH:mm:ss").Replace(' ', 'T')" required>
    </div>
    <button type="submit" value="Edit" class="btn btn-info">Edit</button>
}
@using (Html.BeginForm("Delete", "ToDo", FormMethod.Post))
{
    @Html.HiddenFor(model => model.Id)
    <button type="submit" class="btn btn-danger" value="Delete">Delete</button>
}
